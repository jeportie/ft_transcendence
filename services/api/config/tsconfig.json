{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public"
    ]
}
