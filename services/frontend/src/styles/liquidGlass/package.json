{
    "name": "frontend",
    "type": "module",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
        "watch:css": "tailwindcss -i src/input.css -o public/styles.css --watch",
        "watch:js": "esbuild src/main.ts --bundle --sourcemap --outfile=public/bundle.js --public-path=/ --watch --log-level=info --loader:.png=file --loader:.svg=text --loader:.html=text --asset-names=assets/[name]",
        "build:css": "tailwindcss -i src/input.css -o public/styles.css",
        "build:js": "esbuild src/main.ts --bundle --sourcemap --outfile=public/bundle.js --public-path=/ --log-level=info --loader:.png=file --loader:.svg=text --loader:.html=text --asset-names=assets/[name]"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@jeportie/lib2d": "github:jeportie/lib2d#main",
        "@jeportie/mini-fetch": "github:jeportie/mini-fetch#main",
        "@jeportie/mini-spa": "github:jeportie/mini-router#main",
        "autoprefixer": "^10.4.21",
        "babylonjs": "^8.32.2",
        "esbuild": "^0.25.8",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "tweakpane": "^4.0.5",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@tweakpane/plugin-essentials": "^0.2.1",
        "concurrently": "^9.2.1"
    }
}
