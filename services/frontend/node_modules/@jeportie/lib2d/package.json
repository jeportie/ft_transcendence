{
    "name": "@jeportie/lib2d",
    "version": "0.1.0",
    "description": "Tiny composable 2D math + entities + collision helpers for canvas games.",
    "author": "Jérôme Portier <jeportie@42.fr>",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./src/index.js",
            "require": "./dist/cjs/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "main": "./dist/cjs/index.cjs",
    "module": "./src/index.js",
    "types": "./dist/types/index.d.ts",
    "files": [
        "src",
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "npm run clean && node ./scripts/build.mjs && tsc -p tsconfig.json",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "esbuild": "^0.23.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.5.0"
    },
    "keywords": [
        "2d",
        "canvas",
        "vector",
        "collision",
        "game loop",
        "geometry",
        "lib2d"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jeportie/lib2d"
    },
    "bugs": {
        "url": "https://github.com/jeportie/lib2d/issues"
    },
    "homepage": "https://github.com/jeportie/lib2d#readme"
}
