{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@system": [
                "system/index.ts"
            ],
            "@system/*": [
                "system/*"
            ],
            "@system/app/*": [
                "system/app/*"
            ],
            "@system/config/*": [
                "system/config/*"
            ],
            "@system/core/*": [
                "system/core/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@views/*": [
                "views/*"
            ],
            "@views/routes": [
                "views/routes.ts"
            ],
            "@views/loading": [
                "views/pages/LoadingOverlay.ts"
            ],
            "@auth": [
                "system/core/auth/auth.ts"
            ],
            "@graphics/*": [
                "graphics/*"
            ],
            "@env": [
                "system/config/env.ts"
            ]
        },
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public"
    ]
}
